        <template id="report_invoice_infp_H">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="Test_module_sale.report_invoice_infp_H_header">
                    </t>
                    <div class="article" style="font-family: TH Krub; width:100%">
                        <style>
                            table.table2{
                            border-collapse: collapse;
                            width: 100%;
                            cellpadding : 0;
                            }
                            table.fixed &gt; thead > tr &gt; th{
                            border-top: 0px solid black;
                            border-bottom: 0px solid black;
                            border-collapse: collapse;
                            }
                            table.fixed &gt; tbody > tr &gt; td{
                            border-top: 0px solid grey;
                            border-bottom: 0px solid grey;
                            border-collapse: collapse;
                            }
                        </style>
                        <div style="border: 1px solid black; border-radius: 10px 10px 10px 10px; ">
                            <table class="table2" height="660" cellspacing="0" border-collapse="collapse"
                                   style="width:100%;">
                                <col width="5%"/>
                                <col width="15%"/>
                                <col width="42%"/>
                                <col width="11%"/>
                                <col width="12%"/>
                                <col width="15%"/>
                                <thead>
                                    <tr valign="center">
                                        <th style="text-align: center; vertical-align: middle; line-height: 24px; padding: 5px; border-bottom: 1px solid black;">
                                            <font style="font-size: 18px; line-height: 24px;">
                                                <b>ลำดับ</b>
                                            </font>
                                        </th>
                                        <th style="text-align: center; vertical-align: middle; line-height: 24px; border-left: 1px solid black; padding: 5px;  border-bottom: 1px solid black;">
                                            <font style="font-size: 18px;">
                                                <b>รหัสสินค้า</b>
                                            </font>
                                        </th>
                                        <th style="text-align: center; vertical-align: middle; line-height: 24px; border-left: 1px solid black; padding: 5px;  border-bottom: 1px solid black;">
                                            <font style="font-size: 18px;">
                                                <b>รายละเอียดสินค้า</b>
                                            </font>
                                        </th>
                                        <th style="text-align: center; vertical-align: middle; line-height: 24px; border-left: 1px solid black; padding: 5px;  border-bottom: 1px solid black;">
                                            <font style="font-size: 18px;">
                                                <b>จำนวน</b>
                                            </font>
                                        </th>
                                        <th style="text-align: center; vertical-align: middle; line-height: 24px; border-left: 1px solid black; padding: 5px; border-bottom: 1px solid black;border-right: 1px solid black;">
                                            <font style="font-size: 18px;">
                                                <b>หน่วยละ</b>
                                            </font>
                                        </th>
                                        <th style="text-align: center; vertical-align: middle; line-height: 24px; border-left: 1px solid black; padding: 5px;border-bottom: 1px solid black;">
                                            <font style="font-size: 18px;">
                                                <b>จำนวนเงิน</b>
                                            </font>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="i" t-value="1"/>
                                    <t t-set="line_count" t-value="0"/>
                                    <t t-set="count" t-value="0"/>
                                    <!-- วนลูปรายการสินค้าใน invoice_line_ids -->
                                    <t t-foreach="o.invoice_line_ids" t-as="l">
                                        <tr valign="top">
                                            <td style="text-align: center; line-height: 20px; padding: 3px; border-right: 1px solid black;">
                                                <font style="font-size: 18px;">
                                                    <span t-esc="i"/>
                                                </font>
                                            </td>
                                            <t t-set="i" t-value="i+1"/>
                                            <td style=" padding: 3px; padding-left: 5px; text-align: left; line-height: 20px; border-right: 1px solid black;">
                                                <font style="font-size: 18px;">
                                                    <span t-field="l.product_id.default_code"/>
                                                </font>
                                            </td>
                                            <!-- นับจำนวนบรรทัดของข้อความ -->
                                            <t t-set="line_count" t-value="l.get_line_count() if l.name else 1"/>
                                            <!-- เพิ่มจำนวนบรรทัดลงในตัวแปร count -->
                                            <t t-set="count" t-value="count + line_count"/>


                                            <td style=" padding: 3px; padding-left: 5px; text-align: left; line-height: 20px; border-right: 1px solid black;">
                                                <font style="font-size: 18px;">
                                                    <span t-field="l.product_id.name"/>
                                                </font>
                                            </td>

                                            <td style="text-align: center; line-height: 20px; padding: 3px; border-right: 1px solid black;">
                                                <font style="font-size: 18px;">
                                                    <span t-esc="int(l.quantity)"/>
                                                    <t t-if="l.product_id.bom_ids">
                                                        <span>&amp;nbsp;SET</span>
                                                    </t>
                                                    <t t-else="">
                                                        <span>&amp;nbsp;ชุด</span>
                                                    </t>
                                                </font>
                                            </td>

                                            <td style="padding-right: 10px; text-align: right; line-height: 20px; padding: 3px; padding-right: 5px; border-right: 1px solid black;">
                                                <font style="font-size: 18px;">
                                                    <span t-esc="'{0:,.2f}'.format(float(l.price_unit))"/>
                                                </font>
                                            </td>
                                            <td style=" padding: 3px; padding-right: 5px; text-align: right; line-height: 20px;">
                                                <font style="font-size: 18px;">
                                                    <span t-esc="'{0:,.2f}'.format(float(l.price_subtotal))"/>
                                                </font>
                                            </td>
                                        </tr>
                                        <t t-if="l.product_id.bom_ids">
                                            <t t-foreach="l.product_id.bom_ids[0].bom_line_ids" t-as="component">
                                                <tr>
                                                    <td style=" border-right: 1px solid black; text-align: center;">
                                                        <font style="font-size: 18px;">
                                                            <span t-esc="i"/> <!-- ลำดับที่ต่อจากสินค้าหลัก -->
                                                        </font>
                                                    </td>
                                                    <t t-set="i" t-value="i+1"/> <!-- เพิ่มตัวนับลำดับ -->
                                                    <td style="padding-left: 5px; border-right: 1px solid black; text-align: left;">
                                                        <font style="font-size: 18px;">
                                                            <span t-field="component.product_id.default_code"/> <!-- รหัสสินค้าใน Set -->
                                                        </font>
                                                    </td>
                                                    <td style="padding-left: 5px; border-right: 1px solid black; text-align: left;">
                                                        <font style="font-size: 18px;">
                                                            <span t-field="component.product_id.name"/> <!-- ชื่อสินค้าใน Set -->
                                                        </font>
                                                    </td>
                                                    <td style=" border-right: 1px solid black; text-align: center;">
                                                        <font style="font-size: 18px;">
                                                            <span t-esc="int(component.product_qty * l.quantity)"/>&amp;nbsp;ชุด <!-- จำนวนสินค้าใน Set -->
                                                        </font>
                                                    </td>
                                                    <td style=" border-right: 1px solid black; text-align: right;"></td> <!-- เว้นช่องสำหรับราคา -->
                                                    <td style="text-align: right;"></td> <!-- เว้นช่องสำหรับยอดรวม -->
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                    <!--            Loop สำหรับแสดงช่องว่าง หากไม่ถึงจำนวนบรรทัดที่กำหนด-->
