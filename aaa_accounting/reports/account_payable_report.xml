<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="account_payable_report_header_template">
            <t t-if="data['form']['date_to']">
                <t t-set="date" t-value="time.strptime(data['form']['date_to'],'%Y-%m-%d' )"/>
            </t>
            <div class="header"
                 style="font-family: TH Krub; margin-bottom: -5px; padding-bottom: 0px; width:100%; position: relative;">
                <t t-raw="0"/>
                <style>
                    table.fixed{
                    border: 0px solid white;
                    border-collapse: collapse;
                    width: 100%;
                    cellpadding : 0;
                    }
                    table.no-bordered &gt; tr &gt; td{
                    border: 0px solid white;
                    border-collapse: collapse;
                    }
                </style>
                <div class="row">
                    <table class="fixed">
                        <col width="10%"/>
                        <col width="20%"/>
                        <col width="10%"/>
                        <col width="60%"/>
                        <tr>
                            <t t-foreach="request.env['res.company'].search([('id', '=', data['form']['company_id'][0])])"
                               t-as="o">
                                <td colspan="4" style="text-align:center;">
                                    <font style="font-size: 22px;">
                                        <b>
                                            <span t-field="o.name"/>
                                        </b>
                                    </font>
                                </td>
                            </t>
                        </tr>
                        <tr>
                            <td colspan="4" style="text-align:center;">
                                <font style="font-size: 20px;">
                                    <t t-if="data['form']['report_type'] == 'detail'">
                                        <b>รายงานตั้งเจ้าหนี้อื่น ๆ เรียงตามวันที่เอกสาร (แบบแจกแจง)</b>
                                    </t>
                                    <t t-if="data['form']['report_type'] == 'summary'">
                                        <b>รายงานตั้งเจ้าหนี้อื่น ๆ เรียงตามวันที่เอกสาร (แบบสรุป)</b>
                                    </t>
                                </font>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <b>วันที่เอกสาร</b>
                                </font>
                            </td>
                            <td style="text-align: left;">
                                <font style="font-size: 18px;">
                                    <span t-esc="data['form']['date_from']" t-field-options='{"format": "dd/MM/yyyy"}'/>
                                </font>
                            </td>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <b>ถึง</b>
                                </font>
                            </td>
                            <td style="text-align: left;">
                                <font style="font-size: 16px;">
                                    <span t-esc="data['form']['date_to']" t-field-options='{"format": "dd/MM/yyyy"}'/>
                                </font>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </template>

