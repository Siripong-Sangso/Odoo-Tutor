<odoo>
    <template id="doctor_card_template">
        <t t-call="web.html_container">
            <style>
                .page {
                    font-family: Arial, sans-serif;
                    margin: 20px;
                    padding: 15px;
                    border: 2px solid #4CAF50;
                    border-radius: 10px;
                    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
                    background-color: #f9f9f9;
                }
                .header {
                    text-align: center;
                    font-size: 18px;
                    font-weight: bold;
                    margin-bottom: 10px;
                    color: #4CAF50;
                }
                h2 {
                    color: #333;
                }
                .footer {
                    font-size: 10px;
                    text-align: center;
                    color: gray;
                    position: fixed;
                    bottom: 10px;
                    width: 100%;
                }
            </style>

            <div class="header">
                <img src="/path_to_logo/logo.png" style="width: 50px; height: 50px;" />
                <h1>Doctor Report</h1>
                <p>Generated by: <t t-esc="user.name"/></p>
                <p>Date: <t t-esc="time.strftime('%Y-%m-%d')"/></p>
            </div>

            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Doctor Card</h2>
                    <p><strong>Name:</strong> <t t-esc="doc.name"/></p>
                    <p><strong>Reference:</strong> <t t-esc="doc.ref"/></p>
                    <p><strong>Gender:</strong> <t t-esc="doc.gender"/></p>
                    <t t-if="doc.gender == 'male'">
                        <p>This doctor is male.</p>
                    </t>
                    <t t-else="">
                        <p>This doctor is not male.</p>
                    </t>
                </div>
            </t>

            <div class="footer">
                <p>Â© 2024 Hospital Management System | Confidential</p>
            </div>
        </t>
    </template>
</odoo>
