<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_patient_card_template">
        <t t-call="web.external_layout">
            <main>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <!-- Header Section -->
                        <h2>Patient Report</h2>

                        <!-- Patient Information -->
                        <p>
                            <strong>Patient Reference:</strong> <t t-esc="doc.ref"/>
                        </p>
                        <p>
                            <strong>Patient Name:</strong> <t t-esc="doc.name"/>
                        </p>
                        <p>
                            <strong>Age:</strong> <t t-esc="doc.age"/>
                        </p>
                        <p>
                            <strong>Gender:</strong> <t t-esc="doc.gender"/>
                        </p>
                        <p>
                            <strong>Doctor:</strong>
                            <t t-esc="doc.doctor_id.name if doc.doctor_id else 'N/A'"/>
                        </p>
                        <p>
                            <strong>Blood Type:</strong>
                            <t t-esc="doc.blood_type if doc.blood_type else 'N/A'"/>
                        </p>

                        <!-- Additional Information -->
                        <t t-if="doc.age &lt; 10">
                            <p style="color: red;">Note: This patient is a minor (under 10 years old).</p>
                        </t>
                    </div>
                </t>
            </main>
        </t>
    </template>
</odoo>
