<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_patient_template_header">
        <!-- Header -->
        <div class="header" style="font-family: TH Krub; margin-bottom: -5px; padding-bottom: 0px;
                                    width:100%; font-family: TH Krub; position: relative;">
            <style>
                .custom-span {
                font-size: 18px;
                margin: 0px;
                padding: 0px;
                line-height: 22px;
                }
                table.table_hd{
                border: 0px solid white;
                border-collapse: collapse;
                width: 100%;
                cellpadding : 0;
                }
            </style>
        </div>
    </template>
    <template id="report_patient_template_footer">
        <!-- Footer -->
        <div class="footer" style="font-family: TH Krub ;">
            <style>
                table.table{
                border-collapse: collapse;
                width: 100%;
                cellpadding: 0;
                }
                table.table > tr > td{
                border-collapse: collapse;
                }
            </style>
        </div>
    </template>
    <template id="report_patient_card_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="Hospital-Tutor.report_patient_template_header">
                </t>
                <div class="article" style="font-family: TH Krub; width:100%">
                    <style>
                        table.table2{
                        border: 0px solid white;
                        border-collapse: collapse;
                        width: 100%;
                        cellpadding : 0;
                        }
                        table.fixed &gt; thead > tr &gt; th{
                        border-top: 0.5px solid black;
                        border-bottom: 0.5px solid black;
                        border-collapse: collapse;
                        }
                        table.fixed &gt; tbody > tr &gt; td{
                        border-top: 0.5px solid grey;
                        border-bottom: 0.5px solid grey;
                        border-collapse: collapse;
                        }
                    </style>
                    <t t-raw="0"/>
                    <table class="table2" height="740" cellspacing="0" border-collapse="collapse"
                           style="width:100%;">
                        <col width="10%"/>
                        <col width="35%"/>
                        <col width="15%"/>
                        <col width="15%"/>
                        <col width="25%"/>
                        <thead>
                            <tr valign="center">
                                <th style="text-align: center; vertical-align: middle; line-height: 24px; padding: 5px; border-top: 1px solid blue; border-bottom: 1px solid blue;">
                                    <font style="font-size: 18px; line-height: 24px;">
                                        <b>รหัสสินค้า</b>
                                    </font>
                                </th>
                            </tr>
                        </thead>

                        <tbody>

                        </tbody>
                        <tfoot>
                            <tr valign="top">
                                <td colspan="4" rowspan="2"
                                    style="padding-left: 5px; text-align: left; line-height: 20px; border-left: 1px solid blue; border-top: 1px solod blue; border-right: 1px solid blue; ">
                                    <font style="font-size: 18px;">
                                        มูลค่าของสินค้า/บริการตามใบกำกับภาษีเดิม
                                        มูลค่าของสินค้าหรือบริการที่ถูกต้อง
                                    </font>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
