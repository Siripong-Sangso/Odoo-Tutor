<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_patient_template_header">
        <!-- Header -->
        <div class="header">
            <h1>Hospital Patient Report</h1>
            <p>Date:
                <t t-esc="time.strftime('%Y-%m-%d')"/>
            </p>
            <p>Generated by:
                <t t-esc="user.name"/>
            </p>
        </div>
    </template>
    <template id="report_patient_template_footer">
        <!-- Footer -->
        <div class="footer">
            <p>Confidential | Â© 2024 Hospital Management</p>
        </div>
    </template>
    <template id="report_patient_card_template">
        <t t-call="web.html_container">
            <t t-call="Hospital-Tutor.report_patient_template_header">
            </t>
            <!-- Body -->
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Patient Card</h2>
                    <p>
                        <strong>Reference:</strong>
                        <t t-esc="doc.ref"/>
                    </p>
                    <p>
                        <strong>Name:</strong>
                        <t t-esc="doc.name"/>
                    </p>
                    <p>
                        <strong>Age:</strong>
                        <t t-esc="doc.age"/>
                    </p>
                    <p>
                        <strong>Gender:</strong>
                        <t t-esc="doc.gender"/>
                    </p>
                    <p>
                        <strong>Doctor:</strong>
                        <t t-esc="doc.doctor_id.name if doc.doctor_id else 'N/A'"/>
                    </p>
                    <t t-if="doc.age &lt; 10">
                        <p class="highlight">Note: This patient is a minor (under 10 years old).</p>
                    </t>
                </div>
                <t t-call="Hospital-Tutor.report_patient_template_footer">
                </t>
            </t>
        </t>
    </template>
</odoo>
