<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_patient_card_template">
        <t t-call="web.html_container">
            <style>
                .page {
                padding: 15px;
                margin: 15px;
                font-family: Arial, sans-serif;
                background-color: #f9f9f9;
                border: 2px solid #4CAF50;
                border-radius: 10px;
                box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
                }
                .header {
                text-align: center;
                font-size: 18px;
                font-weight: bold;
                color: #4CAF50;
                margin-bottom: 20px;
                }
                .footer {
                text-align: center;
                font-size: 10px;
                color: gray;
                position: fixed;
                bottom: 10px;
                width: 100%;
                }
                .highlight {
                color: #FF5733;
                font-weight: bold;
                }
            </style>

            <!-- Header -->
            <div class="header">
                <h1>Hospital Patient Report</h1>
                <p>Date:
                    <t t-esc="time.strftime('%Y-%m-%d')"/>
                </p>
                <p>Generated by:
                    <t t-esc="user.name"/>
                </p>
            </div>

            <!-- Body -->
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Patient Card</h2>
                    <p>
                        <strong>Reference:</strong>
                        <t t-esc="doc.ref"/>
                    </p>
                    <p>
                        <strong>Name:</strong>
                        <t t-esc="doc.name"/>
                    </p>
                    <p>
                        <strong>Age:</strong>
                        <t t-esc="doc.age"/>
                    </p>
                    <p>
                        <strong>Gender:</strong>
                        <t t-esc="doc.gender"/>
                    </p>
                    <p>
                        <strong>Doctor:</strong>
                        <t t-esc="doc.doctor_id.name if doc.doctor_id else 'N/A'"/>
                    </p>
                    <t t-if="doc.age &lt; 10">
                        <p class="highlight">Note: This patient is a minor (under 10 years old).</p>
                    </t>
                </div>
            </t>

            <!-- Footer -->
            <div class="footer">
                <p>Confidential | Â© 2024 Hospital Management</p>
            </div>
        </t>
    </template>
</odoo>

